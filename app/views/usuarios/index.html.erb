<h1>Listing usuarios</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Edad</th>
    <th>Tipo</th>
    <th>Avatar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.name %></td>
    <td><%= usuario.edad %></td>
    <td><%= usuario.tipousuario %></td>
    <td><%= image_tag usuario.avatar.url('thumb') %>
    <td><%= link_to 'Show', usuario %></td>
    <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Destroy', usuario, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Usuario nuevo', new_usuario_path %>
<%= will_paginate @usuarios %>
